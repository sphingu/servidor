{
  "name": "servidor",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/sphingu/servidor.git",
  "author": "sphingu@gmail.com",
  "license": "MIT",
  "scripts": {
    "dev": "tsnd -r tsconfig-paths/register --respawn src/index.ts",
    "build": "tsc -p tsconfig.json --noEmit false",
    "typecheck": "tsc",
    "start": "node out/index.js",
    "lint:base": "eslint --ext .js,.json,.ts",
    "lint": "yarn lint:base 'src/**'"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint:base --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck && lint-staged"
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/graphql": "^14.5.0",
    "@types/mongoose": "^5.7.21",
    "@types/node": "^14.0.5",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.1.3",
    "apollo-server-express": "^2.13.1",
    "body-parser": "^1.19.0",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.15",
    "type-graphql": "^1.0.0-rc.2"
  },
  "engines": {
    "node": ">=12"
  }
}
