{
  "name": "servidor",
  "version": "4.0.0",
  "main": "index.js",
  "repository": "https://github.com/sphingu/servidor.git",
  "author": "sphingu@gmail.com",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "npm run build && node dist/index.js",
    "dev": "nodemon",
    "dev-from-sample": "ts-node-dev --transpile-only --no-notify api/index.ts",
    "build:reflection": "NEXUS_SHOULD_EXIT_AFTER_REFLECTION=true ts-node src/index.ts",
    "build": "rimraf ./dist && tsc",
    "prisma": "prisma",
    "p:generate": "prisma generate",
    "p:push": "prisma db push",
    "p:migrate": "prisma migrate",
    "p:studio": "prisma studio",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "lint": "prettier --check --plugin-search-dir=. . && eslint . --ext .ts",
    "format": "prettier --write --plugin-search-dir=. .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "16.7.1",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "apollo-server-core": "^3.3.0",
    "cypress": "^8.3.1",
    "eslint": "7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "2.0.7",
    "prettier": "^2.2.1",
    "prisma": "^2.30.0",
    "rimraf": "3.0.2",
    "ts-node": "10.2.1",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "@prisma/client": "^2.30.0",
    "apollo-server": "3.3.0",
    "graphql": "15.5.0",
    "nexus": "^1.0.0",
    "nexus-prisma": "^0.32.0"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "servidor",
    "graphql",
    "prisma",
    "typescript",
    "apollo-server",
    "nexus"
  ]
}
